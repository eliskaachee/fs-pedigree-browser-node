<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/calendar.css' />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js" ></script>
    <script>
    function grabPage(pageIndex) {
      return new Promise(function(resolve, reject) {
        var newPage;
        html2canvas(document.getElementsByClassName('page')[pageIndex], {
          onrendered: function(canvas) {
            newPage = canvas.toDataURL('image/jpeg', 1.0);
            if (newPage == undefined) {
              console.log("REJECTED!!!");
              reject();
            } else {
              console.log("RESOLVED");
              resolve(newPage);
            }
          }
        });
      });
    }
    function generate() {
      var calendarPagePromiseArray = [grabPage(0), grabPage(1), grabPage(2), grabPage(3), grabPage(4), grabPage(5), grabPage(6), grabPage(7), grabPage(8), grabPage(9), grabPage(10), grabPage(11), grabPage(12), grabPage(13), grabPage(14), grabPage(15), grabPage(16), grabPage(17), grabPage(18), grabPage(19), grabPage(20), grabPage(21), grabPage(22), grabPage(23)];
      Promise.all(calendarPagePromiseArray).then(
        //if successful
        function(pageArray) {
          var pdf = new jsPDF('landscape', 'mm', 'a4');
          for(var i = 0; i < pageArray.length; i++) {
            pdf.addImage(pageArray[i], 'JPEG', 0, 0, 300, 0);
            pdf.addPage();
          }
          pdf.save("myFamilyCalendar.pdf");
        },
        // if not successful
        function(errorArray) {
          console.log("There was an error retrieveing the calendar");
        }
      ) // end of .then
    }
    </script>
  </head>
  <body>
    <button onclick="generate()">Generate PDF</button>
    <div id="main">
      <% for(var month in calendar) { %>
        <div class="top-page page">
          <img class="top-photo" src="/top-photos/<%- calendar[month].monthName %>.jpg" alt="<%- calendar[month].monthName %> photo" />
        </div>
        <div class="month page">
          <h1><%- calendar[month].monthName %></h1>
          <div class="week">
            <% for(var fillerDay = 0; fillerDay < calendar[month].firstDayOfMonth; fillerDay++) { %>
              <div class="day"></div>
            <% } %>
            <% for(var day = 1; day <= calendar[month].numDaysInMonth; day++) { %>
              <!-- check to see if it would be the end of the week based on the offset of the first day of the month -->
              <% if((day + calendar[month].firstDayOfMonth - 1) % 7 === 0) { %>
                </div>
                <div class="week">
              <% } %>
              <div class="day">
                <span class="dayNumber"><%- day %></span>
                <% for (var dayWithEvents in calendar[month].dates) {
                  if((' ' + day) === dayWithEvents) { %>
                    <% for(var event in calendar[month].dates[dayWithEvents]) { 
                      if(event < 2) { %>
                      <div class="event">
                        <%- calendar[month].dates[dayWithEvents][event].name %>
                        <% if(calendar[month].dates[dayWithEvents][event].type === 'birth') { %>
                          was born today in 
                        <% } else if(calendar[month].dates[dayWithEvents][event].type === 'marriage') { %>
                          were married today in 
                        <% } else { %>
                          died today in 
                        <% } %>
                        <%- calendar[month].dates[dayWithEvents][event].year %>
                        <!-- <%- calendar[month].monthName %>
                        <%- calendar[month].dates[dayWithEvents][event].day %> -->
                      </div> <!-- end of event -->
                      <% } %>
                    <% } %>
                  <% } %>
                <% } %>
              </div> <!-- end of day -->
            <% } %>
            <% var numDaysTilEnd = (7 - ((calendar[month].firstDayOfMonth + calendar[month].numDaysInMonth) % 7));
                if(numDaysTilEnd === 7) {
                  numDaysTilEnd = 0;
                }
                for(var fillerDay = 0; fillerDay < numDaysTilEnd; fillerDay++) { %>
              <div class="day"></div>
            <% } %>
          </div> <!-- end of week -->
        </div> <!-- end of month -->
        <!--ADD_PAGE-->
      <% } %>
    </div>
  </body>
</html>